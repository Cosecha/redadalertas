{
  "env": {
    "mocha": true
  },
  "extends": [
    "airbnb",
    "plugin:prettier/recommended",
    "plugin:react/recommended",
    "plugin:react-native/all"
  ],
  "parser": "babel-eslint",
  "plugins": [
    "react",
    "react-native"
  ],
  "rules": {
    "react/jsx-filename-extension": 0,
    "react-native/no-raw-text": 0
  },
  "settings": {
    "import/resolver": {
      "babel-module": {
        "alias": {
          "ui": "./src/components/ui"
        },
        "root": ["./src"]
      }
    }
  }
}
